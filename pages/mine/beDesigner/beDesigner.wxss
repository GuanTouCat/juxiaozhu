/* pages/mine/beDesigner/beDesigner.wxss */
.designer{
    font-size: 32rpx;
    color: #FFA203;
    margin: 50rpx 30rpx;
    display: flex;
    align-items: center;
}
.designer text{
    width: 20%;
}
.designer input{
    flex: 2;
    border: 1rpx solid #b2b2b2;
    border-radius: 10rpx;
    padding: 10rpx 20rpx;
}
.placeholder{
    font-size: 32rpx;
}
.confirm-btn{
    width: 100%;
    height: 100rpx;
    color: #ffffff;
    font-size: 36rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #FFA203;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
}
