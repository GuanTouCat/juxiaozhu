        <!-- 店铺活动发布 -->
        <block wx:if="{{current1 == 1}}">
          <view class='lineview' style='padding-top: 120rpx;'>
           <view class='title'>
              <text>活动内容</text>
           </view>
           <view class='input'>
           <textarea bindinput='shopactcontent'  maxlength='200' style='padding-left:15rpx; height:200rpx;' placeholder='输入活动内容（200字以内）'></textarea>
           </view>
        </view>


        <view class='lineview' style=' margin-top: 200rpx;'>
           <view class='title'>
              <text>活动时间</text>
           </view>
           <view class='input' style='height:60rpx;'>
