       <text>售出优惠券</text>
       <text class='datatext'>{{datalist.soldCoupon}}</text>
   </view>
   <view class='dataview'>
       <text>活动售出</text>
       <text class='datatext'>{{datalist.actCoupon}}</text>
   </view>
   <view class='dataview'>
       <text>收入</text>
       <text class='datatext'>{{datalist.actAmount}}</text>
   </view>
</view>

