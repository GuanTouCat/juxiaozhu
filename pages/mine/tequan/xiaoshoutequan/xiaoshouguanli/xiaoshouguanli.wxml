               <picker mode="date" bindchange="StartDateChange">                  
                   <view> 
                      <text>{{startdate}} —</text>
                    </view>
                </picker>
                  <picker mode="date" bindchange="EndDateChange">                  
                   <view> 
                      <text> — {{enddate}}</text>
                    </view>
                </picker>
             </view>
           </view>
         </view>

        <view class='lineview' style=' margin-top: 80rpx;'>
           <view class='title'>
              <text>上传活动图片</text>
           </view>
           <view class='input' style='height:60rpx;' >
              <input wx:if="{{uploadshopactimg == 0}}" bindtap='joinPicture2' data-picnum="1" disabled='true' style='padding-left:15rpx; margin-top:10rpx;'  placeholder='点击上传活动图片(最多一张)' ></input>
              <input wx:if="{{uploadshopactimg == 1}}" bindtap='joinPicture2' data-picnum="1" disabled='true' style='padding-left:15rpx; margin-top:10rpx;'  placeholder='点击上传活动图片(已上传)' ></input>
           </view>
        </view>
         <view class='weui-btn-area'>
           <button bindtap='shopactrelease'  class='button'>确认发布</button>
        </view>
