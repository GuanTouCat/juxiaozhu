/* pages/picShare/picShareDetail/picShareDetail.wxss */
page{
    height: 100%;
}
.swiper {
    width: 100%;
}
.swiper swiper{
    height: 400rpx;
}
.slide-image{
    width: 100%;
    /*height: 100%;*/
}
.top-title-wrap{
    margin-bottom: 30rpx;
}
.top-title-wrap image, .evaluation-cell image{
    width: 84rpx;
    height: 84rpx;
    border-radius: 50rpx;
}
.content-wrap{
    padding: 20rpx 30rpx;
}
.top-title-wrap{
    display: flex;
}
.top-title{
    padding-left: 10rpx;
    flex: 2;
    font-size: 30rpx;
    display: flex;
    flex-direction: column;
}
.top-title-name{
    display: flex;
    align-items: center;
}
.user-tag{
    font-size: 20rpx;
    line-height: 20rpx;
    color: #ffffff;
    background-color: #FFA203;
    border-radius: 20rpx;
    padding: 5rpx 8rpx;
    margin-left: 20rpx;
}
.top-title-info{
    font-size: 26rpx;
    display: flex;
    justify-content: space-between;
}
.room-title, .evaluation-title, .room-title > .room-title-detail{
    font-size: 30rpx;
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}
.room-title{
    justify-content: space-between;
}
.room-title > .room-title-detail::before, .evaluation-title::before{
    content: "";
    display: block;
    width: 6rpx;
    height: 30rpx;
    background: #FFA203;
    border-radius: 8rpx;
    margin-right: 20rpx;
}
.room-info-cell{
    display: flex;
    align-items: center;
    padding: 20rpx 0 20rpx 26rpx;
}
.room-info-title, .room-shop, .room-shop-btn{
    width: 33%;
    font-size: 26rpx;
}
.room-shop-btn{
    display: flex;
    justify-content: flex-end;
}
.room-shop-btn button{
    font-size: 26rpx;
    line-height: 46rpx;
    color: #ffffff;
    width: 120rpx;
    height: 46rpx;
    background-color: #FFA203;
    border-radius: 30rpx;
    margin: 0;
}
.evaluation-wrap{
    padding-bottom: 110rpx;
    margin-bottom: 100rpx;
}
.evaluation-title, .evaluation-cell{
    padding: 0 30rpx;
}
.evaluation-cell{
    padding: 20rpx 30rpx;
    display: flex;
}
.evaluation-shop{
    font-size: 30rpx;
    padding-left: 20rpx;
    display: flex;
    flex-direction: column;
}
.evaluation-date{
    font-size: 22rpx;
    padding-bottom: 15rpx;
}
.bottom-btn-wrap{
    height: 100rpx;
    border-top: 2rpx solid #b2b2b2;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
}
.bottom-btn{
    width: 25%;
    padding: 20rpx 0;
    display: flex;
    justify-content: center;
    align-items: flex-start;
}
.bottom-btn .btn-num{
    font-size: 20rpx;
    line-height: 1rpx;
}
.bottom-btn .icon-pinglun{
    color: #000;
}
.icon-zan, .icon-xingxing2, .icon-fenxiang, .icon-xingxing3, .icon-zan01{
    font-size: 46rpx;
}
.icon-pinglun{
    font-size: 42rpx;
    color: #ffa203;
}
.icon-xingxing3{
    font-size: 46rpx;
    color: #FFA203;
}
.icon-zan01{
    font-size: 48rpx;
    color: #FFA203;
}
.share-btn{
    padding: 0;
}
.evaluation-btn{
    color: #ffffff;
    overflow: visible;
    display: block;
    position: relative;
}
.evaluation-info{
    color: #000000;
    position: absolute;
    /*left: 0;*/
    right: 80rpx;
    top: 0;
}
.evaluation-btn .btn-num{
    color: #000;
    position: absolute;
    top: 0;
    right: 45rpx;
}
.evaluation-ipt-wrap{
    padding: 20rpx;
    display: flex;
    justify-content: center;
    /*position: fixed;*/
    /*left: 0;*/
    /*right: 0;*/
    /*height: 100rpx;*/
}
.evaluation-ipt{
    font-size: 30rpx;
    width: 75%;
    border-radius: 50rpx;
    background-color: #eeeeee;
    padding: 10rpx 40rpx;
    margin: auto;
    display: flex;
    align-items: center;
}
.evaluation{
    flex: 2;
    font-size: 30rpx;
    color: #999999;
    padding-left: 20rpx;
}
.placeholderSty{
    font-size: 30rpx;
}
.evaluation-ipt-up-wrap{
    padding: 20rpx 0;
    background-color: #ffffff;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9999;
    /*height: 100rpx;*/
}
.mask{
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.6;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
}
.active{
    color: #FFA203;
    background-color: #FFA203;
}
.editor-room{
    width: 120rpx;
    height: 46rpx;
    font-size: 26rpx;
    line-height: 46rpx;
    text-align: center;
    color: #ffffff;
    background-color: #ffa203;
    border-radius: 30rpx;
}
.no-data{
    font-size: 36rpx;
    color: #b2b2b2;
    text-align: center;
    padding: 50rpx;
}
