<!--index.wxml-->
<view>
<!-- 搜索栏 -->
<view style='display: flex; flex-direction: row; align-items:center; padding:10rpx 0' >
  <image class='p1' src='http://rzpro.oss-cn-hangzhou.aliyuncs.com/icon/dqdqw.png'></image>
  <text class='t1' bindtap='choosecity' >{{location}}</text>
  <view class='search' >
  <image class='local' src='http://rzpro.oss-cn-hangzhou.aliyuncs.com/icon/find.png'></image>
  <!-- <input disabled='ture' placeholder="输入商品名称或标题" placeholder-style='padding-top:6rpx;color:#9C9C9D;font-size: 34rpx;' bindtap='find'></input> -->
  <view style='color:#9C9C9D;font-size: 34rpx;' bindtap='find'>输入商品名称或标题</view>
  </view>
</view>
<!-- 轮播图 -->
<view class='swiper'>
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <swiper-item wx:for="{{lunbo}}" wx:key="{{index}}">
        <image src="{{item.picUrl}}" class="slide-image" />
      </swiper-item>
  </swiper>
</view>
<!-- 商品分类 -->
<view class='allkindfun'>

<view class='allkindview'>
    <view class='kindview' bindtap='xuqiu'>
    <image src='http://rzpro.oss-cn-hangzhou.aliyuncs.com/iconnew/3.png' class='kindimg'></image>
    <view style='text-align:center;'><text class='word'>用户需求</text></view>
  </view>

  <view class='kindview' bindtap='kindlist' data-kindtype='1'>
    <image src='http://rzpro.oss-cn-hangzhou.aliyuncs.com/iconnew/2.png' class='kindimg'></image>
    <view style='text-align:center;'><text class='word'>成品家具</text></view>
  </view>

  <view class='kindview' bindtap='kindlist' data-kindtype='2'>
    <image src='http://rzpro.oss-cn-hangzhou.aliyuncs.com/iconnew/1.png' class='kindimg'></image>
    <view style='text-align:center;'><text class='word'>全屋定制</text></view>
  </view>

    <view class='kindview' bindtap='kindlist' data-kindtype='3'>
    <image src='http://rzpro.oss-cn-hangzhou.aliyuncs.com/iconnew/4.png' class='kindimg'></image>
    <view style='text-align:center;'><text class='word'>窗帘墙纸</text></view>
  </view>

    <view class='kindview' bindtap='kindlist' data-kindtype='4'>
    <image src='http://rzpro.oss-cn-hangzhou.aliyuncs.com/iconnew/5.png' class='kindimg'></image>
    <view style='text-align:center;'><text class='word'>灯具软饰</text></view>
  </view>

</view>

