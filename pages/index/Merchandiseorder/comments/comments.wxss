.tg_feedback {
    height: 100%;
    background-color: #f1f1f1;
}

.tg_feedback_title {
    width: 100%;
    box-sizing: border-box;
    padding-left: 24rpx;
    height: 64rpx;
    line-height: 64rpx;
    font-size: 28rpx;
}

.tg_feedback_main {
    width: 100%;
    padding-left: 20rpx;
    padding-right: 20rpx;
    background-color: #fff;
    height: 400rpx;
}

.tg_feedback textarea {
    width: 100%;
    height: 350rpx;
    font-size: 28rpx;
    padding-top: 10rpx;
} 




.ys{
  width: 100%;
  height: 100rpx;
  background-color: #FF6F4E;
  color: white;
  position: fixed;
  bottom: 0;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
}

.Starcomments{
  width: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #fff;
  height: 200rpx;
}

.starview{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}
.starimg{
  width: 100rpx;
  height: 100rpx;
  margin-left: 30rpx;
}

.startext{
  color: #A3A3A3;
  font-size: 28rpx;
  text-align: center;
  margin-top: 30rpx;
}

.bg{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  /* 设置透明度 */
  opacity: 0.70;
}

/* 点红包弹框 */
.redpacketview{
  top: 18%;
  z-index: 1000;
}


.location{
  position: absolute;
  margin: auto;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
}

.redpacketbtn{
    top: 550rpx;
}